{
  "Auth": {
    "Mode": "OnPrem",
    "Password": {
      "Hash": "BCrypt",
      "LockoutMaxFails": 5,
      "LockoutMinutes": 15
    },
    "SaaS": {
      "RequireEmailConfirmed": true,
      "AllowSelfRegistration": false,
      "TokenExpirationMinutes": 60
    },
    "OnPrem": {
      "UserTable": "tuse1",
      "AllowPasswordReset": false,
      "RequireDomainUser": false
    },
    "Windows": {
      "RequireDomainMembership": true,
      "FallbackToLocal": false,
      "TrustLevel": "Full",
      "DefaultDomain": "EMPRESA",
      "DomainController": "dc.empresa.local",
      "AllowedDomains": [ "EMPRESA", "FILIAL1", "FILIAL2" ],
      "LdapPath": "LDAP://dc.empresa.local",
      "SearchBase": "DC=empresa,DC=local"
    }
  },
  "Jwt": {
    "Issuer": "RhSensoERP",
    "Audience": "RhSensoERP-Clients",
    "PublicKeyPem": "-----BEGIN PUBLIC KEY-----\n...paste RS256 public key PEM...\n-----END PUBLIC KEY-----\n",
    "PrivateKeyPem": "-----BEGIN PRIVATE KEY-----\n...dev only, do not commit...\n-----END PRIVATE KEY-----\n",
    "AccessTokenMinutes": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7050",
      "http://localhost:7050"
    ]
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/rhsenso-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/security-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] SECURITY: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "@m like '%SECURITY_EVENT%'",
          "writeTo": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/security-events-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 90,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Message:lj}{NewLine}"
              }
            }
          ]
        }
      }
    ]
  }
}