            transform: translateY(-3px);
        }

        }

        @@keyframes float-down {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(3px);
        }

        }

        /* Tooltip no hover */
        .scroll-btn-rhsenso::after {
