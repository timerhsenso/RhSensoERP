    <script>
        // =========================================================================
        // STEP 1: SELECTION
        // =========================================================================
        async function loadEntities() {
            const module = document.getElementById('slcModule').value;
            const slcEntity = document.getElementById('slcEntity');
            const btnNext = document.getElementById('btnGoToStep2');

            slcEntity.innerHTML = '<option value="">Carregando...</option>';
            slcEntity.disabled = true;
            btnNext.disabled = true;

            if (!module) {
                slcEntity.innerHTML = '<option value="">Aguardando sele√ß√£o do m√≥dulo...</option>';
                return;
            }

            try {
                const response = await fetch('/Manifest/GetEntities?module=' + module);
                const entities = await response.json();

                slcEntity.innerHTML = '<option value="">Selecione uma entidade...</option>';
                entities.forEach(e => {
                    const opt = document.createElement('option');
                    opt.value = e.entityName;
                    opt.textContent = `${e.displayName} (${e.entityName})`;
                    slcEntity.appendChild(opt);
                });

                slcEntity.disabled = false;
            } catch (error) {
                console.error(error);
                slcEntity.innerHTML = '<option value="">Erro ao carregar</option>';
            }
        }

        document.getElementById('slcEntity').addEventListener('change', function() {
            document.getElementById('btnGoToStep2').disabled = !this.value;
        });

        function goToStep2() {
            const entityName = document.getElementById('slcEntity').value;
            if(!entityName) return;

            showStep(2);
            loadEntityAnalysis(entityName);
        }

        // =========================================================================
        // STEP 2: ANALYSIS
        // =========================================================================
        async function loadEntityAnalysis(entityName) {
            document.getElementById('comparisonLoader').classList.remove('d-none');
            document.getElementById('comparisonResult').classList.add('d-none');
            document.getElementById('jsonPreview').value = 'Carregando...';

            try {
                // 1. Get Details for JSON View
                const resEntity = await fetch('/Manifest/GetEntity?name=' + entityName);
                const entityData = await resEntity.json();

                // ‚úÖ Salvar no Store IMEDIATAMENTE
                Store.set('entity', entityData);
                console.log('‚úÖ Entidade salva no Store:', entityData.entityName);

                document.getElementById('txtEntityName').value = entityData.entityName;
                document.getElementById('txtApiRoute').value = entityData.route || '';
                document.getElementById('jsonPreview').value = JSON.stringify(entityData, null, 2);

                // 2. Perform Comparison
                const resCompare = await fetch('/Manifest/CompareEntity', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ entityName: entityName })
                });

                const comparison = await resCompare.json();
                Store.set('dbSchema', comparison);

                renderComparison(comparison);

            } catch (error) {
                console.error(error);
                Swal.fire('Erro', 'Falha ao analisar entidade: ' + error.message, 'error');
            } finally {
                document.getElementById('comparisonLoader').classList.add('d-none');
                document.getElementById('comparisonResult').classList.remove('d-none');
            }
        }

        function renderComparison(data) {
            const alert = document.getElementById('statusAlert');
            const title = document.getElementById('statusTitle');
            const msg = document.getElementById('statusMsg');
            const mismatchContainer = document.getElementById('mismatchContainer');
            const mismatchBody = document.getElementById('mismatchBody');
            const missingContainer = document.getElementById('missingContainer');
            const missingList = document.getElementById('missingList');

            mismatchBody.innerHTML = '';
            missingList.innerHTML = '';
            mismatchContainer.classList.add('d-none');
            missingContainer.classList.add('d-none');

            if (!data.tableExists) {
                alert.className = 'alert alert-danger d-flex align-items-center mb-3';
                title.textContent = 'Erro Cr√≠tico!';
                msg.textContent = `A tabela '${data.tableName}' n√£o existe no banco de dados.`;
                return;
            }

            const isMatch = (data.mismatches || []).length === 0 && (data.missingColumns || []).length === 0;

            if (isMatch) {
                alert.className = 'alert alert-success d-flex align-items-center mb-3';
                title.textContent = 'Tudo Certo!';
                msg.textContent = 'A estrutura da API corresponde perfeitamente ao Banco de Dados.';
            } else {
                alert.className = 'alert alert-warning d-flex align-items-center mb-3';
                title.textContent = 'Aten√ß√£o!';
                msg.textContent = 'Existem diverg√™ncias entre a API e o Banco de Dados.';

                if (data.mismatches && data.mismatches.length > 0) {
                    mismatchContainer.classList.remove('d-none');
                    data.mismatches.forEach(m => {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
                            <td>${m.propertyName} / ${m.columnName}</td>
                            <td class="text-info">${m.apiType}</td>
                            <td class="text-warning">${m.dbType}</td>
                            <td class="text-danger"><i class="fas fa-times me-1"></i> Tipo Diferente</td>
                        `;
                        mismatchBody.appendChild(tr);
                    });
                }

                if (data.missingColumns && data.missingColumns.length > 0) {
                    missingContainer.classList.remove('d-none');
                    data.missingColumns.forEach(c => {
                        const li = document.createElement('li');
                        li.textContent = `Coluna '${c}' existe na API mas n√£o no Banco.`;
                        missingList.appendChild(li);
                    });
                }
            }
        }

        // =========================================================================
        // STEP 3: GRID CONFIGURATION
        // =========================================================================
        function goToStep3() {
            const entity = Store.get('entity');
            if (!entity) {
                Swal.fire('Erro', 'Entidade n√£o encontrada no Store. Volte ao Step 2.', 'error');
                return;
            }

            showStep(3);

            setTimeout(() => {
                if (typeof GridConfig !== 'undefined') {
                    GridConfig.render();
                    console.log('‚úÖ GridConfig renderizado');
                }
            }, 100);
        }

        // =========================================================================
        // STEP 4: FORM DESIGNER
        // =========================================================================
        function goToStep4() {
            const entity = Store.get('entity');
            if (!entity) {
                Swal.fire('Erro', 'Entidade n√£o encontrada no Store. Volte ao Step 2.', 'error');
                return;
            }

            console.log('‚úÖ Step 4: Entidade no Store:', entity.entityName);

            showStep(4);

            setTimeout(() => {
                if (typeof FormDesigner !== 'undefined') {
                    FormDesigner.render();
                    console.log('‚úÖ FormDesigner renderizado');

                    // Debug
                    const paletteCount = document.querySelectorAll('.draggable-field:not(.field-added)').length;
                    const canvasCount = document.querySelectorAll('.dropped-field').length;
                    console.log(`üìä Paleta: ${paletteCount} campos | Canvas: ${canvasCount} campos`);
                } else {
                    console.error('‚ùå FormDesigner n√£o est√° definido!');
                }
            }, 100);
        }

        // =========================================================================
        // STEP 5: GENERATION
        // =========================================================================
        function goToStep5() {
            const entity = Store.get('entity');
            if (!entity) {
                Swal.fire('Erro', 'Entidade n√£o encontrada no Store. Volte ao Step 2.', 'error');
                return;
            }

            showStep(5);
            updateSummary();
        }

        function updateSummary() {
            const entity = Store.get('entity');
            const formFields = Store.get('formFields') || [];

            // Grid columns
            let gridCols = 0;
            if (typeof GridConfig !== 'undefined' && GridConfig.config.columns) {
                gridCols = GridConfig.config.columns.filter(c => c.visible || c.Visible).length;
            }

            // Auto-gera√ß√£o info
            const gridText = gridCols > 0 ? gridCols : 'Auto (at√© 8)';
            const formText = formFields.length > 0 ? formFields.length : 'Auto (edit√°veis)';

            document.getElementById('summaryGridCount').textContent = gridText;
            document.getElementById('summaryFormCount').textContent = formText;
            document.getElementById('summaryEntityName').textContent = entity?.entityName || '-';
        }

        // =========================================================================
        // ‚úÖ v4.6 FIXED: generateFiles() COM CONVERS√ÉO PASCALCASE
        // =========================================================================
        async function generateFiles() {
            const btn = document.getElementById('btnGenerate');

            try {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Gerando...';

                // ‚úÖ Verificar ApiClient
                if (typeof ApiClient === 'undefined') {
                    throw new Error('ApiClient n√£o est√° carregado! Verifique se api-client.js foi inclu√≠do.');
                }

                // ‚úÖ Verificar Store
                const entity = Store.get('entity');
                if (!entity) {
                    throw new Error('Entidade n√£o encontrada no Store. Volte ao Step 2.');
                }

                // ‚úÖ Setar overrides no DOM (se usu√°rio preencheu)
                const cdFuncaoOverride = document.getElementById('txtCdFuncaoOverride').value;
                const displayNameOverride = document.getElementById('txtDisplayNameOverride').value;

                if (cdFuncaoOverride) {
                    let cdFuncaoInput = document.getElementById('cdFuncao');
                    if (!cdFuncaoInput) {
                        cdFuncaoInput = document.createElement('input');
                        cdFuncaoInput.id = 'cdFuncao';
                        cdFuncaoInput.type = 'hidden';
                        document.body.appendChild(cdFuncaoInput);
                    }
                    cdFuncaoInput.value = cdFuncaoOverride;
                }

                if (displayNameOverride) {
                    let displayNameInput = document.getElementById('displayName');
                    if (!displayNameInput) {
                        displayNameInput = document.createElement('input');
                        displayNameInput.id = 'displayName';
                        displayNameInput.type = 'hidden';
                        document.body.appendChild(displayNameInput);
                    }
                    displayNameInput.value = displayNameOverride;
                }

                // ‚úÖ Setar checkboxes
                const checkboxesMap = {
                    'chkWebController': 'optWebController',
                    'chkWebModels': 'optWebModels',
                    'chkWebServices': 'optWebServices',
                    'chkView': 'optView',
                    'chkJs': 'optJavaScript'
