    <script>
        // =========================================================================
        // BOT√ïES DE SCROLL INTEGRADOS - RHSENSO
        // =========================================================================
        (function() {
            'use strict';

            const topBtn = document.getElementById('scrollToTopBtn');
            const bottomBtn = document.getElementById('scrollToBottomBtn');

            if (!topBtn || !bottomBtn) {
                console.warn('‚ö†Ô∏è Bot√µes de scroll n√£o encontrados');
                return;
            }

            let isScrolling = false;

            function updateScrollButtons() {
                if (isScrolling) return;

                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;

                // Threshold para mostrar bot√µes
                const showThreshold = 300;
                const bottomThreshold = 100;

                // Bot√£o TOPO: mostrar se scrollou para baixo
                if (scrollTop > showThreshold) {
                    topBtn.classList.add('show');
                } else {
                    topBtn.classList.remove('show');
                }

                // Bot√£o FIM: mostrar se n√£o estiver no fim
                const isNotAtBottom = scrollTop + windowHeight < documentHeight - bottomThreshold;
                if (isNotAtBottom && scrollTop > 100) {
                    bottomBtn.classList.add('show');
                } else {
                    bottomBtn.classList.remove('show');
                }
            }

            function scrollToTop() {
                isScrolling = true;
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });

                // Reset flag ap√≥s anima√ß√£o
                setTimeout(() => {
                    isScrolling = false;
                    updateScrollButtons();
                }, 1000);
            }

            function scrollToBottom() {
                isScrolling = true;
                window.scrollTo({
                    top: document.documentElement.scrollHeight,
                    behavior: 'smooth'
                });

                // Reset flag ap√≥s anima√ß√£o
                setTimeout(() => {
                    isScrolling = false;
                    updateScrollButtons();
                }, 1000);
            }

            // Event Listeners com debounce
            let scrollTimer;
            window.addEventListener('scroll', function() {
                if (scrollTimer) clearTimeout(scrollTimer);
                scrollTimer = setTimeout(updateScrollButtons, 50);
            }, { passive: true });

            window.addEventListener('resize', updateScrollButtons, { passive: true });
            topBtn.addEventListener('click', scrollToTop);
            bottomBtn.addEventListener('click', scrollToBottom);

            // Verificar ao carregar
            updateScrollButtons();

            console.log('‚úÖ Bot√µes de scroll inicializados');
        })();
    </script>




