                <div id="columnConfig"></div>
                <div id="filterConfig" class="mt-4"></div>

                <div class="d-flex justify-content-end mt-4">
                    <button class="btn btn-primary" onclick="goToStep4()">
                        Configurar Formul√°rio <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- STEP 4: FORM DESIGNER -->
        <div class="card d-none" id="step4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-paint-brush me-2"></i>Passo 4: Designer de Formul√°rio</span>
                <button class="btn btn-sm btn-outline-light" onclick="goToStep3()">
                    <i class="fas fa-arrow-left me-1"></i> Voltar
