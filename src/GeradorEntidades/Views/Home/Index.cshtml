@model List<GeradorEntidades.Models.ModuleInfo>
@{
    ViewData["Title"] = "Gerador Frontend v4.5";
    var apiUrl = ViewBag.ApiUrl;
}

<!DOCTYPE html>
<html lang="pt-BR" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #6366f1;
            --secondary-color: #1e293b;
            --accent-color: #3b82f6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-light: #f8fafc;
            --text-muted: #94a3b8;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .card {
            background-color: var(--bg-card);
            border: 1px solid #334155;
            border-radius: 12px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: rgba(99, 102, 241, 0.1);
            border-bottom: 1px solid #334155;
            color: var(--primary-color);
            font-weight: 600;
        }

        .form-control, .form-select {
            background-color: #334155;
            border: 1px solid #475569;
            color: var(--text-light);
        }

        .form-control:focus, .form-select:focus {
            background-color: #334155;
            border-color: var(--primary-color);
            color: var(--text-light);
            box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-success { background-color: var(--success-color); border: none; }
        .btn-danger { background-color: var(--danger-color); border: none; }

        .step-indicator {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            padding: 0 50px;
            position: relative;
        }
        
        .step-indicator::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 60px;
            right: 60px;
            height: 2px;
            background-color: #334155;
            z-index: 0;
            transform: translateY(-50%);
        }

        .step-item {
            z-index: 1;
            background-color: var(--bg-card);
            padding: 10px 20px;
            border-radius: 20px;
            border: 2px solid #334155;
            color: var(--text-muted);
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .step-item.active {
            border-color: var(--primary-color);
            color: var(--primary-color);
            box-shadow: 0 0 15px rgba(99, 102, 241, 0.3);
        }

        .step-item.completed {
            border-color: var(--success-color);
            color: var(--success-color);
        }

        .json-viewer {
            background-color: #0f172a;
            color: #a5b4fc;
            padding: 15px;
            border-radius: 8px;
            font-family: 'Consolas', monospace;
            font-size: 0.85rem;
            height: 400px;
            overflow: auto;
            border: 1px solid #334155;
        }
        
        .comparison-table td, .comparison-table th {
            vertical-align: middle;
        }
    </style>
</head>
<body>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-6 fw-bold text-primary"><i class="fas fa-magic me-2"></i>Gerador Frontend Enterprise</h1>
        <p class="text-muted">Gere controllers, views e services diretamente para seu projeto</p>
    </div>

    <!-- STEPPER -->
    <div class="step-indicator">
        <div class="step-item active" id="step1-indicator">
            <i class="fas fa-1"></i> Seleção
        </div>
        <div class="step-item" id="step2-indicator">
            <i class="fas fa-2"></i> Análise & Comparação
        </div>
        <div class="step-item" id="step3-indicator">
            <i class="fas fa-3"></i> Geração
        </div>
    </div>

    <!-- STEP 1: SELECTION -->
    <div class="card" id="step1">
        <div class="card-header"><i class="fas fa-search me-2"></i>Passo 1: Selecionar Entidade</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Módulo</label>
                    <select class="form-select" id="slcModule" onchange="loadEntities()">
                        <option value="">Selecione um módulo...</option>
                        @foreach (var module in Model)
                        {
                            <option value="@module.Name">@module.DisplayName (@module.EntityCount)</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Entidade</label>
                    <select class="form-select" id="slcEntity" disabled>
                        <option value="">Aguardando seleção do módulo...</option>
                    </select>
                </div>
            </div>
            
            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-primary" id="btnGoToStep2" onclick="goToStep2()" disabled>
                    Carregar Metadados <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- STEP 2: ANALYSIS & COMPARISON -->
    <div class="card d-none" id="step2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-microscope me-2"></i>Passo 2: Análise e Comparação</span>
            <button class="btn btn-sm btn-outline-light" onclick="goToStep1()">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </button>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- LEFT: INFO & JSON -->
                <div class="col-md-5">
                    <h6 class="text-primary mb-3">Metadados da API (JSON)</h6>
                    <div class="mb-3">
                        <label class="form-label small text-muted">Entidade</label>
                        <input type="text" class="form-control form-control-sm" id="txtEntityName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small text-muted">Rota API</label>
                        <input type="text" class="form-control form-control-sm" id="txtApiRoute" readonly>
                    </div>
                    
                    <textarea id="jsonPreview" class="form-control json-viewer mb-3" readonly></textarea>
                </div>

                <!-- RIGHT: COMPARISON RESULTS -->
                <div class="col-md-7">
                    <h6 class="text-primary mb-3">Comparação com Banco de Dados</h6>
                    
                    <div id="comparisonLoader" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-2 text-muted">Comparando com estrutura do banco...</p>
                    </div>

                    <div id="comparisonResult" class="d-none">
                        <!-- STATUS ALERT -->
                        <div id="statusAlert" class="alert alert-success d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle fs-4 me-3"></i>
                            <div>
                                <strong id="statusTitle">Sucesso!</strong>
                                <div id="statusMsg" class="small">A estrutura da API corresponde ao Banco de Dados.</div>
                            </div>
                        </div>

                        <!-- MISMATCH TABLE -->
                        <div id="mismatchContainer" class="d-none">
                             <table class="table table-dark table-sm table-bordered comparison-table">
                                <thead>
                                    <tr>
                                        <th>Propriedade/Coluna</th>
                                        <th>API (JSON)</th>
                                        <th>Banco (SQL)</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="mismatchBody">
                                    <!-- Rows injected via JS -->
                                </tbody>
                             </table>
                        </div>

                         <!-- MISSING COLUMNS -->
                        <div id="missingContainer" class="d-none mt-3">
                             <h6 class="text-warning small"><i class="fas fa-exclamation-triangle me-1"></i> Colunas não encontradas no Banco:</h6>
                             <ul id="missingList" class="text-danger small"></ul>
                        </div>
                    </div>
                </div>
            </div>

             <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-primary" id="btnGoToStep3" onclick="goToStep3()">
                    Validar e Prosseguir <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- STEP 3: CONFIG & GENERATE -->
    <div class="card d-none" id="step3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-cogs me-2"></i>Passo 3: Configuração e Geração</span>
            <button class="btn btn-sm btn-outline-light" onclick="goToStep2()">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </button>
        </div>
         <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <h6 class="text-primary">Arquivos a Gerar</h6>
                    <div class="list-group">
                         <label class="list-group-item bg-dark text-light border-secondary">
                            <input class="form-check-input me-2" type="checkbox" id="chkWebController" checked>
                            Web Controller
                        </label>
                        <label class="list-group-item bg-dark text-light border-secondary">
                            <input class="form-check-input me-2" type="checkbox" id="chkWebModels" checked>
                            Web ViewModels (DTOs)
                        </label>
                         <label class="list-group-item bg-dark text-light border-secondary">
                            <input class="form-check-input me-2" type="checkbox" id="chkWebServices" checked>
                            API Service Client
                        </label>
                        <label class="list-group-item bg-dark text-light border-secondary">
                            <input class="form-check-input me-2" type="checkbox" id="chkView" checked>
                            Razor View (Index/Form)
                        </label>
                        <label class="list-group-item bg-dark text-light border-secondary">
                            <input class="form-check-input me-2" type="checkbox" id="chkJs" checked>
                            JavaScript File
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                     <h6 class="text-primary">Configurações Adicionais</h6>
                     <div class="mb-3">
                        <label class="form-label">CdFuncao (Opcional)</label>
                        <input type="text" class="form-control" id="txtCdFuncaoOverride" placeholder="Ex: CAP_COLABORADORESDOCS">
                        <small class="text-muted">Deixe em branco para usar o do manifesto</small>
                     </div>
                     <div class="mb-3">
                        <label class="form-label">DisplayName (Opcional)</label>
                        <input type="text" class="form-control" id="txtDisplayNameOverride" placeholder="Ex: Cadastro de Documentos">
                     </div>
                     <div class="alert alert-info border-info">
                         <i class="fas fa-info-circle me-1"></i>
                         Os arquivos serão gerados diretamente em: <br>
                         <code>C:\ProjetosAspNet\RhSensoERP\src\</code>
                     </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-5">
                <button class="btn btn-success btn-lg px-5" id="btnGenerate" onclick="generateFiles()">
                    <i class="fas fa-rocket me-2"></i> Gerar Arquivos no Projeto
                </button>
            </div>
         </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    let currentEntity = null;

    // STEP 1 LOGIC
    async function loadEntities() {
        const module = document.getElementById('slcModule').value;
        const slcEntity = document.getElementById('slcEntity');
        const btnNext = document.getElementById('btnGoToStep2');
        
        slcEntity.innerHTML = '<option value="">Carregando...</option>';
        slcEntity.disabled = true;
        btnNext.disabled = true;

        if (!module) {
            slcEntity.innerHTML = '<option value="">Aguardando seleção do módulo...</option>';
            return;
        }

        try {
            const response = await fetch('/Manifest/GetEntities?module=' + module);
            const entities = await response.json();
            
            slcEntity.innerHTML = '<option value="">Selecione uma entidade...</option>';
            entities.forEach(e => {
                const opt = document.createElement('option');
                opt.value = e.entityName;
                opt.textContent = `${e.displayName} (${e.entityName})`;
                slcEntity.appendChild(opt);
            });
            
            slcEntity.disabled = false;
        } catch (error) {
            console.error(error);
            slcEntity.innerHTML = '<option value="">Erro ao carregar</option>';
        }
    }

    document.getElementById('slcEntity').addEventListener('change', function() {
        document.getElementById('btnGoToStep2').disabled = !this.value;
    });

    function goToStep2() {
        const entityName = document.getElementById('slcEntity').value;
        if(!entityName) return;
        
        showStep(2);
        loadEntityAnalysis(entityName);
    }

    // STEP 2 LOGIC
    async function loadEntityAnalysis(entityName) {
        // Reset UI
        document.getElementById('comparisonLoader').classList.remove('d-none');
        document.getElementById('comparisonResult').classList.add('d-none');
        document.getElementById('jsonPreview').value = 'Carregando...';
        
        try {
            // 1. Get Details for JSON View
            const resEntity = await fetch('/Manifest/GetEntity?name=' + entityName);
            currentEntity = await resEntity.json();
            
            document.getElementById('txtEntityName').value = currentEntity.entityName;
            document.getElementById('txtApiRoute').value = currentEntity.route;
            document.getElementById('jsonPreview').value = JSON.stringify(currentEntity, null, 2);

            // 2. Perform Comparison
            const resCompare = await fetch('/Manifest/CompareEntity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ entityName: entityName })
            });

            const comparison = await resCompare.json();
            renderComparison(comparison);

        } catch (error) {
            console.error(error);
            Swal.fire('Erro', 'Falha ao analisar entidade: ' + error.message, 'error');
        } finally {
            document.getElementById('comparisonLoader').classList.add('d-none');
            document.getElementById('comparisonResult').classList.remove('d-none');
        }
    }

    function renderComparison(data) {
        const alert = document.getElementById('statusAlert');
        const title = document.getElementById('statusTitle');
        const msg = document.getElementById('statusMsg');
        const mismatchContainer = document.getElementById('mismatchContainer');
        const mismatchBody = document.getElementById('mismatchBody');
        const missingContainer = document.getElementById('missingContainer');
        const missingList = document.getElementById('missingList');

        mismatchBody.innerHTML = '';
        missingList.innerHTML = '';
        mismatchContainer.classList.add('d-none');
        missingContainer.classList.add('d-none');

        if (!data.tableExists) {
            alert.className = 'alert alert-danger d-flex align-items-center mb-3';
            title.textContent = 'Erro Crítico!';
            msg.textContent = `A tabela '${data.tableName}' não existe no banco de dados.`;
            return;
        }

        if (data.isMatch) {
            alert.className = 'alert alert-success d-flex align-items-center mb-3';
            title.textContent = 'Tudo Certo!';
            msg.textContent = 'A estrutura da API corresponde perfeitamente ao Banco de Dados.';
        } else {
            alert.className = 'alert alert-warning d-flex align-items-center mb-3';
            title.textContent = 'Atenção!';
            msg.textContent = 'Existem divergências entre a API e o Banco de Dados.';
            
            // Render Mismatches
            if (data.mismatches.length > 0) {
                mismatchContainer.classList.remove('d-none');
                data.mismatches.forEach(m => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${m.propertyName} / ${m.columnName}</td>
                        <td class="text-info">${m.apiType}</td>
                        <td class="text-warning">${m.dbType}</td>
                        <td class="text-danger"><i class="fas fa-times me-1"></i> Tipo Diferente</td>
                    `;
                    mismatchBody.appendChild(tr);
                });
            }

            // Render Missing
            if (data.missingColumns.length > 0) {
                missingContainer.classList.remove('d-none');
                data.missingColumns.forEach(c => {
                    const li = document.createElement('li');
                    li.textContent = `Coluna '${c}' existe na API mas não no Banco.`;
                    missingList.appendChild(li);
                });
            }
        }
    }

    // STEP 3 LOGIC
    function goToStep3() {
        showStep(3);
    }

    async function generateFiles() {
        const btn = document.getElementById('btnGenerate');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Gerando...';

        const request = {
            entityName: currentEntity.entityName,
            cdFuncao: document.getElementById('txtCdFuncaoOverride').value,
            displayName: document.getElementById('txtDisplayNameOverride').value,
            gerarWebController: document.getElementById('chkWebController').checked,
            gerarWebModels: document.getElementById('chkWebModels').checked,
            gerarWebServices: document.getElementById('chkWebServices').checked,
            gerarView: document.getElementById('chkView').checked,
            gerarJavaScript: document.getElementById('chkJs').checked
        };

        try {
            const response = await fetch('/Manifest/GenerateToDisk', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(request)
            });

            const result = await response.json();

            if (response.ok) {
                Swal.fire({
                    title: 'Gerado com Sucesso!',
                    text: result.message,
                    icon: 'success',
                    confirmButtonText: 'Concluir'
                }).then(() => {
                    location.reload();
                });
            } else {
                throw new Error(result.error || 'Erro desconhecido');
            }
        } catch (error) {
            Swal.fire('Erro', error.message, 'error');
        } finally {
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-rocket me-2"></i> Gerar Arquivos no Projeto';
        }
    }

    // UTILS
    function showStep(stepNumber) {
        // Hide all cards
        document.getElementById('step1').classList.add('d-none');
        document.getElementById('step2').classList.add('d-none');
        document.getElementById('step3').classList.add('d-none');

        // Show target
        document.getElementById(`step${stepNumber}`).classList.remove('d-none');

        // Update indicators
        document.querySelectorAll('.step-item').forEach((el, index) => {
            el.classList.remove('active', 'completed');
            if (index + 1 === stepNumber) el.classList.add('active');
            if (index + 1 < stepNumber) el.classList.add('completed');
        });
    }

    function goToStep1() { showStep(1); }
</script>

</body>
</html>
