{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "RhSensoERP.Web": "Information"
    }
  },

  "AllowedHosts": "*",

  "ApiSettings": {
    "BaseUrl": "https://localhost:7193",
    "TimeoutSeconds": 30,
    "AuthTimeoutSeconds": 60,
    "RetryCount": 3,
    "RetryBaseDelaySeconds": 2,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 30,
    "EnableDetailedLogging": false,
    "UserAgent": "RhSensoERP.Web/3.0"
  },

  "Authentication": {
    "LoginPath": "/Account/Login",
    "LogoutPath": "/Account/Logout",
    "AccessDeniedPath": "/Account/AccessDenied",
    "CookieName": "RhSensoERP.Auth",
    "ExpireTimeSpan": 480,
    "SlidingExpiration": true
  },

  "Session": {
    "IdleTimeoutMinutes": 30,
    "CookieName": "RhSensoERP.Session"
  },

  "PermissionsCache": {
    "MaxSize": 1000
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Polly": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/rhsensoerp-web-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "RhSensoERP.Web"
    }
  }
}